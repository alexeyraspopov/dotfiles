{
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "plugins": [
    "babel-plugin-style-literal",
    ["babel-plugin-module-resolver", { "root": ["./packages"] }],
    [
      "babel-plugin-auto-import",
      {
        "declarations": [
          {
            "default": "React",
            "members": [
              "useRef",
              "useMemo",
              "useState",
              "useEffect",
              "useReducer",
              "useContext",
              "useCallback",
              "useLayoutEffect",
              "useImperativeHandle",
              "Fragment",
              "Suspense"
            ],
            "path": "react"
          }
        ]
      }
    ],
    [
      "@babel/plugin-transform-destructuring",
      {
        loose: false,
        selectiveLoose: [
          "useState",
          "useEffect",
          "useContext",
          "useReducer",
          "useCallback",
          "useMemo",
          "useRef",
          "useImperativeHandle",
          "useLayoutEffect"
        ]
      }
    ]
  ]
}
